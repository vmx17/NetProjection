<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleMathComponent">

    <Style TargetType="local:BoxRenderer" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:BoxRenderer">
                    <SwapChainPanel Width="800" Height="600" Background="{TemplateBinding BackColor}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
