<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SwapChainComponent">

    <Style TargetType="local:BoxRenderer" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:BoxRenderer">
                    <StackPanel x:Name="stackPanel">
                        <SwapChainPanel
                            x:Name="swapChainPanel">
                        </SwapChainPanel>
                        <TextBox Text="This is the BoxRenderer comes from NuGet package."/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
    
    
